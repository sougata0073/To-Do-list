<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/green</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/MyPositiveButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/MyNegativeButton</item>
    </style>

    <style name="TimePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/green</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/MyPositiveButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/MyNegativeButton</item>
    </style>


    <!-- For button colors, positive means OK or YES type buttons and negative means NO or Cancel type buttons -->
    <style name="MyPositiveButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="MyNegativeButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#000000</item>
    </style>

</resources>